#! /bin/sh

sxhkd &

# wm config
bspc config border_width         0
bspc config window_gap 20

bspc config split_ratio          0.52

bspc config focus_follows_pointer true

bspc monitor -d I II III IV V VI VII VIII IX X

# rules
bspc rule -a Zathura state=tiled
bspc rule -a "Genymotion Player" state=floating
bspc rule -a "fl.exe" state=floating

# startup
~/.config/polybar/launch.sh &
picom -b --experimental-backends &
wal -R
~/.fehbg
dunst &
# feh-blur -d &
pgrep xflux || xflux -l 43.36 -g 1.26 &
disown

# source pywal colors
. "$HOME/.colors/gruvbox/gruvbox.sh"
bspc config normal_border_color $color0
bspc config focused_border_color $color6
bspc config presel_feedback_color $color6
